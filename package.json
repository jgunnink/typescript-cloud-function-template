{
  "name": "ts-template",
  "version": "1.5.0",
  "description": "A typescript function which is a template for building cloud functions on GCP quickly.",
  "repository": "jgunnink/typescript-cloud-function-template",
  "main": "dist/index.js",
  "scripts": {
    "start": "npx tsc-watch --onSuccess 'npx @google-cloud/functions-framework --target=helloWorld'",
    "deploy": "gcloud functions deploy ts-template --gen2 --runtime=nodejs24 --trigger-http --allow-unauthenticated --region australia-southeast1 --entry-point=helloWorld",
    "deploy20": "gcloud functions deploy ts-template --gen2 --runtime=nodejs20 --trigger-http --allow-unauthenticated --region australia-southeast1 --entry-point=helloWorld",
    "deploy22": "gcloud functions deploy ts-template --gen2 --runtime=nodejs22 --trigger-http --allow-unauthenticated --region australia-southeast1 --entry-point=helloWorld",
    "build": "npx tsc",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' nyc --reporter=lcov mocha -r ts-node/register 'tests/**/*.ts'"
  },
  "engines": {
    "node": ">=20.0.0 <25.0.0"
  },
  "author": "JK Gunnink",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.17",
    "@types/express": "^5.0.5",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "chai": "^6.2.1",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.2.0"
  }
}
